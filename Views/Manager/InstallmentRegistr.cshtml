@using BankApp.Models.InstallmentOrCreditModel
@using Microsoft.AspNetCore.Identity;
@model List<CreateInstallment>
<table>
    <tr>
        <th>Имя</th>
        <th>Деньги</th>
        <th>Процент</th>
        <th>Количество месяцев</th>
    </tr>


            
@foreach(var apply in @Model)
    {
         <tr>
             <td>@apply.ClientName</td>
             <td>@apply.Money</td>
             <td>@apply.MoneyProcent</td>
             <td>@apply.Count</td>
             <td>
                <form asp-action="RejectCreditOrInstallment" asp-route-Id='@apply.Id' method="post" >
                 <button type="submit"> Отклонить</button>
                </form>

                <form asp-action="ConfirmInstallment" asp-route-Id="@apply.Id" method="post">
                    
                 <button type="submit"> Подтвердить</button>
                </form>
           
              </td>
         </tr>
        
    }
 </table>
 <a asp-action="Index" asp-controller="Manager">Назад</a>